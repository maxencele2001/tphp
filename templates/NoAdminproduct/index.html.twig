{% extends 'base.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block body %}
<div class="container">
{% for product in products %}
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="{{product.image}}" class="card-img" alt="img">
            </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                            <p class="card-text"><small class="text-muted">{{ product.created_at | date('d / m / y') }}</small></p>
                            {% if product.promo == true %}<span class="badge badge-primary">Promo</span>{% endif %}
                            <a class="btn btn-primary" href="{{ path('product.show', {id: product.id}) }}" role="button">En savoir plus</a>
                            <a class="btn btn-success" href="{{ path('cart.add', {id: product.id}) }}" role="button">Ajouter au panier</a>
                    </div>
                </div>
        </div>
    </div>
{% endfor %}
</div>


{% endblock %}

